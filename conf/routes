# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.DefaultController.index

# Temporary links to images online
GET     /assets/images/eateries/kfc.jpg             controllers.Default.redirect(to="http://www.vieglicelot.lv/uimg/91954897224710.jpg")
GET     /assets/images/eateries/pankukas.jpg        controllers.Default.redirect(to="https://irs0.4sqi.net/img/general/width960/SRPXNNFX5V3HWSN15EMHWVOQT5JEJ2FXRCND43NRGA5RTNEW.jpg")
GET     /assets/images/eateries/pelmeni.jpg        controllers.Default.redirect(to="http://www.vieglicelot.lv/uimg/8689276696447.jpg")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /welcome                    controllers.DefaultController.welcome
GET     /overview                   controllers.OverviewController.index
GET     /eateries                   controllers.EateriesController.index
POST    /eateries/eat               controllers.EateriesController.eat
GET     /friends                    controllers.FriendsController.index
GET     /randomize                  controllers.RandomizeController.index
GET     /contact                    controllers.ContactController.index
GET     /about                      controllers.AboutController.index
GET     /help                       controllers.HelpController.index

GET     /favicon-16.png             controllers.Assets.at(path="/public", file="/images/favicon-16.png")
GET     /favicon-64.png             controllers.Assets.at(path="/public", file="/images/favicon-64.png")

POST    /changeLanguage             controllers.LanguageController.changeLanguage()